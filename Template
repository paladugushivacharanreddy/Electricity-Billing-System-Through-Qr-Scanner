<body>
    <div class="container">
        <h1 class="text-center">Electricity Billing System</h1>
        
        <!-- Add User Form -->
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user-plus"></i> Add User
            </div>
            <div class="card-body">
                <form id="addUserForm">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="address" required>
                    </div>
                    <div class="form-group">
                        <label for="meter_number">Meter Number</label>
                        <input type="text" class="form-control" id="meter_number" name="meter_number" required>
                    </div>
                    <div class="form-group">
                        <label for="amount_due">Amount Due</label>
                        <input type="number" class="form-control" id="amount_due" name="amount_due" required>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="addUser()">Add User</button>
                </form>
                <div id="addUserResult" class="mt-3"></div>
            </div>
        </div>
        
        <!-- Generate QR Code Form -->
        <div class="card">
            <div class="card-header">
                <i class="fas fa-qrcode"></i> Generate QR Code
            </div>
            <div class="card-body">
                <form id="generateForm">
                    <div class="form-group">
                        <label for="generate_meter_number">Meter Number</label>
                        <input type="text" class="form-control" id="generate_meter_number" name="meter_number" required>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="generateQR()">Generate</button>
                </form>
                <div id="qrCode" class="mt-3"></div>
            </div>
        </div>
        
        <!-- Scan QR Code Form -->
        <div class="card">
            <div class="card-header">
                <i class="fas fa-barcode"></i> Scan QR Code
            </div>
            <div class="card-body">
                <form id="scanForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="qr_code">Upload QR Code</label>
                        <input type="file" class="form-control-file" id="qr_code" name="qr_code" accept="image/*" required>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="scanQRCode()">Scan QR Code</button>
                </form>
                <div id="scanResult" class="mt-3"></div>
            </div>
        </div>
    </div>

    <script>
        async function addUser() {
            const form = document.getElementById('addUserForm');
            const formData = new URLSearchParams(new FormData(form));
            const response = await fetch('/add_user', {
                method: 'POST',
                body: formData
            });
            const data = await response.json();
            const result = document.getElementById('addUserResult');
            result.textContent = data.message || data.error;
        }

        async function generateQR() {
            const form = document.getElementById('generateForm');
            const formData = new URLSearchParams(new FormData(form));
            const response = await fetch('/generate_qr', {
                method: 'POST',
                body: formData
            });
            const data = await response.json();
            const qrCode = document.getElementById('qrCode');
            if (data.qr_code) {
                qrCode.innerHTML = `<img src="${data.qr_code}" alt="QR Code" class="qr-code">`;
            } else {
                qrCode.textContent = data.error;
            }
        }

        async function scanQRCode() {
            const form = document.getElementById('scanForm');
            const formData = new FormData(form);
            const response = await fetch('/scan_qr', {
                method: 'POST',
                body: formData
            });
            const data = await response.json();
            const result = document.getElementById('scanResult');
            if (data.error) {
                result.textContent = data.error;
            } else {
                result.innerHTML = `<strong>Name:</strong> ${data.name}<br><strong>Address:</strong> ${data.address}<br><strong>Amount Due:</strong> ${data.amount_due}`;
            }
        }
    </script>
</body>
